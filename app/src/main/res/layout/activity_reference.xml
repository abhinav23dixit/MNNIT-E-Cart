<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crazyhitty.chdev.ks.firebasechat.ReferenceActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Button"
        android:id="@+id/home_button"
        android:layout_above="@+id/info_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:id="@+id/chat_button"
        android:layout_above="@+id/list_book"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Book"
        android:id="@+id/upload_book"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Book"
        android:id="@+id/delete_book"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get book list by user in console"
        android:id="@+id/list_book"
        android:layout_above="@+id/delete_book"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get User Info"
        android:id="@+id/info_button"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Chat With Particular User"
        android:id="@+id/chat_user"
        android:layout_below="@+id/upload_book"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload file"
        android:id="@+id/upload_file"
        />

</RelativeLayout>
