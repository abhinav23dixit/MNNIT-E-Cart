<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crazyhitty.chdev.ks.firebasechat.ReferenceActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Button"
        android:id="@+id/home_button"
        android:layout_above="@+id/UserActivityButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:id="@+id/chat_button"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/delete_book"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Book"
        android:id="@+id/delete_book"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user activity"
        android:id="@+id/UserActivityButton"
        android:layout_above="@+id/chat_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

</RelativeLayout>
